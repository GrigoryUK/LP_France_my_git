              %a.header__nav-link{href: occitania_ar_url} OCCITANIA
              %a.header__nav-link{href: new_aquitaine_ar_url} NEW AQUITAINE
              %a.header__nav-link.header__nav-link--active{href: paris_region_ar_url} PARIS REGION
              %a.header__nav-link{href: loirevalley_ar_url} LOIRE VALLEY
              %a.header__nav-link.header__nav-link--home.header__nav-link--icon{href: root_url}
                MAIN PAGE
