              %a.header__nav-link.header__nav-link--active{href: new_aquitaine_ar_url} NEW AQUITAINE
              %a.header__nav-link{href: paris_region_ar_url} PARIS REGION
              %a.header__nav-link{href: loirevalley_ar_url} LOIRE VALLEY
